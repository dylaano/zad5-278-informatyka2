#include <iostream>
#include <cstdlib>
#include <algorithm>
#include<ctime>
using namespace std;

const int N = 5;


void losuj(int A[][N]){
    for(int i=0;i<N;i++){
        for(int j=0;j<N;j++){
            A[i][j]=rand()%10;
        }
    }
}

void wypisz(int A[][N]){
    for (int i=0; i<N; i++){
        for (int j=0; j<N; j++){
            cout << A[i][j] << " ";
        }
        cout << endl;
    }
}

void sumamaks(int P[][N])
{

    for (int i=1;i<N;i++)
    {
        P[0][i]+=P[0][i-1];
        P[i][0]+=P[i-1][0];
    }
    for(int i=1;i<N;i++)
    for(int j=1;j<N;j++)
        P[i][j]+=max(P[i-1][j],P[i][j-1]);
      wypisz(P);
      cout<<"optymalna suma to: "<<P[N-1][N-1]<<endl;

}
void droga(int P[][N])
{
    wypisz(P);
    cout<<"optymalna droga to: ";
      int w = 0, k = 0;
    for (int i=0; i<2*N-1; i++){
        if(P[w+1][k] > P[w][k+1]){
            cout << P[w][k] << ", " ;
            w++;
        }
        else{
            cout << P[w][k] << ", " ;
            k++;
}
    }}
int main(){
    srand(time(NULL));

    int P[N][N] = {0};
    losuj(P);
    wypisz(P);
    sumamaks(P);
    droga(P);

    return 0;
}
